=simple_form_for(@user, :as => :user, :url => profile_path, :html => { :class => 'form-horizontal' }) do |f|
  %fieldset
    %legend
      Editar cadastro
    =f.input :name
    =f.input :email
    =f.input :username, :disabled => true
    -unless @user.is_a? Admin
      =f.input :cpf
      =f.input :rg
      =f.input :birthdate, :start_year => Date.today.year - 90, :end_year => Date.today.year - 12, :input_html => {:class => 'input-small'}
    %div.form-actions
      =f.button :submit, "Salvar"
      =link_to "Cancelar", profile_path, :class => :btn
