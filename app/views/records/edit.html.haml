=simple_form_for(@record, :html => { :class => 'form-horizontal' }) do |f|
  %fieldset
    %legend
      Editar registro
    %br
    =f.input :name, :input_html => {:class => 'input-large'}
    =f.input :comments
    %div.form-actions
      =f.button :submit, "Salvar"
      =link_to "Cancelar", records_path, :class => :btn
